{
    "name": "ugnku/test_ci",
    "description": "Test GitHub test CI",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eugene V. Kudryavtsev",
            "email": "info@eugeny.su"
        }
    ],
    "autoload": {
        "psr-4": { "tci\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "tci\\tests\\": "tests/" }
    },
    "require": {
        "php": ">=7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5||^7.2||^8.0||^9.0",
        "php-coveralls/php-coveralls": "v2.5.2",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "lint": "phpcs --report=full --report-width=120",
        "test": "phpunit --coverage-clover clover.xml"
    }
}
